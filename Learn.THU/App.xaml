<Application
    x:Class="LearnTHU.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnTHU"
    xmlns:v="using:LearnTHU.View"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <v:InvBoolConverter x:Key="InvBool" />
            <v:IntToBoolConverter x:Key="IntToBool"/>
            <v:WorkStatusConverter x:Key="WorkStatus"/>
            <v:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>
