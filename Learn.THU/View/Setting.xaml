<Page
    x:Class="LearnTHU.View.Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnTHU.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot>
            <PivotItem Header="选项">
                <StackPanel Padding="24">
                    <TextBlock Text="已登录帐号:"></TextBlock>
                    <TextBlock x:Name="UserId" Text="..." Margin="0,12" Padding="48,0,0,0"></TextBlock>
                    <Button Click="Button_Click">退出登录</Button>

                    <TextBlock Text="Developing..." Margin="0,48,0,0" FontStyle="Italic" FontSize="20"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="关于">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/LogoGreen2.png" Width="150" Margin="0,48,0,0" ></Image>
                    <TextBlock Text="Learn@THU" HorizontalAlignment="Center" Margin="0,48,0,0" FontSize="26.667" FontWeight="Bold"/>
                    <TextBlock Text="Version 1.0" HorizontalAlignment="Center" Margin="0"></TextBlock>
                    <TextBlock Text="清华大学网络学堂的一个第三方客户端" HorizontalAlignment="Center" Margin="0,24,0,0"></TextBlock>
                    <TextBlock Text="按照 MIT 协议开源" HorizontalAlignment="Center" Margin="0,12,0,0"></TextBlock>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0">
                        <HyperlinkButton Content="GitHub" NavigateUri="https://github.com/gKevinK/LearnTHU-UWP"></HyperlinkButton>
                    </StackPanel>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
